<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.crowdtogo.crowdie.crowdtogo.SplashActivity"
    android:background="#ecf0f1">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/splashImage"
        android:src="@drawable/ic_ctg_logo_black"
        android:visibility="invisible"
        android:layout_above="@+id/txtCopyright" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="COPYRIGHT Â© SOLUTIONS RESOURCE INC. \n 2014.ALL RIGHTS RESERVED"
        android:id="@+id/txtCopyright"
        android:textSize="10sp"
        android:textColor="@color/copyright"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
